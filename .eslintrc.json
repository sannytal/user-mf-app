{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "camelcase": "error",
        "curly": "error",
        "no-const-assign": "error",
        "no-extra-semi": "warn",
        "no-use-before-define": [
            "error",
            {
                "functions": false
            }
        ],
        "prefer-const": "warn",
        "no-var": "error",
        "quotes": [
            "error",
            "single",
            {
                "allowTemplateLiterals": true
            }
        ],
        "indent": [
            "error",
            "2 space"
        ]
    }
}